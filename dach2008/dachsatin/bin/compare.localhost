#!/bin/sh

#SERVERHOST=babylon.few.vu.nl
#SERVERHOST=lily.local
#SERVERHOST=fs0.das3.cs.vu.nl
SERVERHOST=localhost

# Check setting of DACHSATIN_HOME
if [ -z "$DACHSATIN_HOME" ];  then
    echo "please set DACHSATIN_HOME to the location of your dachsatin installation" 1>&2
    exit 1
fi

export DACH_EXECUTABLE=/tmp/dach/bin/exec.sh
export DACH_MACHINE_ID=machine001
export DACH_DATA_DIR=/tmp/dach
export DACH_TMP_DIR=/tmp/dach/tmp

# Jar-files from library.
LIBCLASSPATH=""
add_to_libclasspath () {
    JARFILES=`cd "$1" && ls *.jar 2>/dev/null`
    for i in ${JARFILES} ; do
	if [ -z "$LIBCLASSPATH" ] ; then
	    LIBCLASSPATH="$1/$i"
	else
	    LIBCLASSPATH="$LIBCLASSPATH:$1/$i"
	fi
    done
}

# Add the jar files in the VideoPlayer lib dir to the classpath.
add_to_libclasspath "${DACHSATIN_HOME}"/lib

# And finally, run ...
#    -Dsmartsockets.file="$DACHSATIN_HOME"/smartsockets.properties \
exec java \
    -classpath "$CLASSPATH:$LIBCLASSPATH" \
    -Dlog4j.configuration=file:"$DACHSATIN_HOME"/log4j.properties \
    -Dibis.server.address=$SERVERHOST:5437 \
    -Dibis.pool.name=DACH \
     ibis.dachsatin.Main "$@"
