#!/bin/sh

export DACHSATIN_HOME=/home/dach004/dachsatin-0.7

# Check setting of DACHSATIN_HOME
if [ -z "$DACHSATIN_HOME" ];  then
    echo "please set DACHSATIN_HOME to the location of your dachsatin installation" 1>&2
    exit 1
fi

# Jar-files from library.
LIBCLASSPATH=""
add_to_libclasspath () {
    JARFILES=`cd "$1" && ls *.jar 2>/dev/null`
    for i in ${JARFILES} ; do
	if [ -z "$LIBCLASSPATH" ] ; then
	    LIBCLASSPATH="$1/$i"
	else
	    LIBCLASSPATH="$LIBCLASSPATH:$1/$i"
	fi
    done
}

# Add the jar files in the Tweaker lib dir to the classpath.
add_to_libclasspath "${DACHSATIN_HOME}"/lib

# And finally, run ...
exec java \
    -classpath "$CLASSPATH:$LIBCLASSPATH" \
    -Dlog4j.configuration=file:"$DACHSATIN_HOME"/log4j.properties \
     ibis.server.Server --stats --events --port 5437 $@
